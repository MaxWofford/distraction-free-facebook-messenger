{
	"name": "Distraction Free Facebook Messenger [beta]",
	"description": "Remove all temptation from Facebook Messenger",
	"version": "0.2",
	"permissions": [
		"activeTab",
		"storage",
		"tabs",
		"https://www.facebook.com/*"
	],
	"background": {
		"scripts": [
			"js/background.js"
		],
		"persistent": false
	},
	"browser_action": {
		"default_title": "Just Messenger",
		"default_icon": {
			"19": "images/icon19.png",
			"38": "images/icon38.png",
			"128": "images/icon128.png"
		}
	},
	"manifest_version": 2
}