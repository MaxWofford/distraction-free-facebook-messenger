{
  "name": "Just Messenger",
  "description": "Distraction Free Facebook Messenger",
  "version": "0.0",
  "permissions": [
    "activeTab", "storage", "tabs", "https://www.facebook.com/*"
  ],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Just Messenger",
    "default_icon": {                    // optional
      "19": "images/icon19.png",           // optional
      "38": "images/icon38.png"            // optional
    }
  },
  "manifest_version": 2
}
